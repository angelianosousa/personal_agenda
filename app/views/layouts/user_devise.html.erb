<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>PersonalAgenda</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= stylesheet_link_tag    'user_devise' %>

  </head>

  <body class="login">
    <div>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">

            <% flash.each do |name, msg| %>
              <% if msg.is_a?(String) %>
                <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
                  <a class="close" data-dismiss="alert">&#215;</a>
                  <%= content_tag :div, msg, :id => "flash_#{name}" %>
                </div>
              <% end %>
            <% end %>
            
            <%= yield %>
          </section>
        </div>

      </div>
    </div>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'user_devise' %>

    <% if flash %>
        <% flash.each do |key, value| %>
          <%= javascript_tag do %>
            var notify =$.notify('<strong>Saving</strong> Do not close this page...', { allow_dismiss: false });
            notify.update({ type: 'success', '<strong>Success</strong> Your page has been saved!' });
          <% end %>
        <% end %>
    <% end %>

  </body>
</html>
