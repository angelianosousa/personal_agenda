<div class="container">
  <div class="title_left">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#taskCalendarModal" style="float:right">
      <i class="fa fa-plus-square"> Nova atividade</i>
    </button>
    <h3>Minha Agenda de Eventos</h3>
  </div>
  <div class="clearfix"></div>


  <div class="x_content">
    <div id="calendar">
      <div class="simple-calendar" style="diplay:inline-block;">
        <%= month_calendar(events: @tasks) do |date, tasks| %>
          <%= I18n.l(date) %>
          
          <% @tasks.first(2).each do |task| %>
            <br>
            <label class="badge badge-primary" data-toggle="modal" data-target="#taskModal_<%= task.board.id %>" title="Clique para ver todos os tÃ³picos desse assunto">
              <%= task.board.title.truncate(20) %>
            </label>

            <%= render partial: '/users_backoffice/boards/shared/tasks_modal', locals: { board: task.board } %>

            <%= render partial: 'users_backoffice/calendar_events/shared/task_calendar_modal', locals: { task: @task = Task.new } %> 
          <% end %>

        <% end %>
      </div>
    </div>

  </div>

</div>
