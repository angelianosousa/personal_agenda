<%= form_with(model: [:users_backoffice, user_profile], local: true) do |form| %>
  <% if user_profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user_profile.errors.count, "error") %> prohibited this user_profile from being saved:</h2>

      <ul>
        <% user_profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='row'>
    <div class='col-md-4'>
      <% @user_profile = current_user.user_profile.avatar %> <!-- Variable for set the current user for images profile --->
      <div class='card' style='width: 20rem;'>
        <div class='card-body'>
          <div class='form-group'>
            <div class="field">
              <div class='text-center'>
                <%= @user_profile.attached? ? image_tag(@user_profile, class:"img-circle", size:"200x200") : image_tag("https://via.placeholder.com/200C/", size:"200x200", class:"img-circle") %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class='col-md-8'>
      <div class='card'>
        <div class='card-body'>
          <div class='form-group'>
            <div class="field">
              <label>Imagem de Perfil</label>
              <div class="custom-file">
                <%= form.label :'Escolher arquivo', class:"custom-file-label", for:"customFile" %>
                <%= form.file_field :avatar, class:"form-control", class:"custom-file-input", id:"customFile" %>
              </div>
            </div>
          </div>
          <div class='form-group'>
            <div class="field">
              <%= form.label :'Nome Completo' %>
              <%= form.text_field :fullname, class:"form-control" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="btn-group actions">
    <%= form.submit "Salvar", class:'btn btn-primary' %>&nbsp;
    <%= link_to 'Voltar', users_backoffice_welcome_path, class:'btn btn-danger' %>
  </div>
<% end %>
