<div class='wrapper-div'>

  <div class='row'>
    <div class='col-md-6'>
      <div class='field'>
        <%= form.label :'Nome do passo' %>
        <%= form.text_field :name, class:"form-control" %>
      </div>
    </div>
    <div class='col-md-6'>
      <div class='field'>
        <%= form.label :'Objetivo' %>
        <%= form.collection_select :objective_id, Objective.order(:name), :id, :name, {}, { class:"form-control" } %>
      </div>
    </div>
  </div>
  <div class='field'>
    <%= form.label :'Data Limite' %>
    <%= form.date_field :deadline, class:"form-control" %>
  </div>
  <div class='field'>
    <%= form.label :'Descrição' %>
    <%= form.text_area :description, class:"form-control" %>
  </div>

  <div class='row'>
    <div class='col-md-6'>
    </div>
    <div class='col-md-6'>
    </div>
  </div>
  <div class='field'>
    <%= form.label :'Finalizado ?' %>
    <%= form.check_box :done, class:"form-control-md" %>
  </div>

  <%= link_to_remove_nested(form) do %> <!-- adds a link to add more items -->
    <i class='fa fa-trash'></i>
  <% end %>
</div>
