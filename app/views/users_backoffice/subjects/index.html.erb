<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Descrição</th>
      <th scope="col"><%= link_to '',  new_users_backoffice_subject_path , class:"btn btn-success btn-round fa fa-plus-circle", style:"font-size:20px;" %></th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <th scope="row"><%= subject.id %></th>
        <td><%= subject.name %></td>
        <td><%= subject.description %></td>
        <td>
          <%= link_to '', edit_users_backoffice_subject_path(subject), class:"btn btn-secondary fa fa-edit", style:"font-size:15px;" %>
          <%= link_to '', users_backoffice_subject_path(subject), method: :delete, data: {confirm: "Tem certeza que quer apagar o assunto: #{subject.name} ?"}, class:"btn btn-danger fa fa-trash", style:"font-size:15px;" %>
        <td>
      </tr>
    <% end %>
  </tbody>
</table><br>

<%= paginate @subjects %>
