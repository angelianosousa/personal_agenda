<h2>Cadastrando nova senha</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> minimo de caracteres)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control", placeholder:"Digite uma nova senha" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirme a nova senha" %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class:"btn btn-primary", style:"margin-left:0" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
