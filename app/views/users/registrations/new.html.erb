<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Digite seu email", class:"form-control" %>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Digite uma senha", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirme sua senha", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class:"btn btn-primary btn-block", style:"margin-left:0;" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
